{
  "name": "@coderbyheart/bdd-feature-runner-aws-example",
  "version": "1.0.0",
  "description": "Example use of @nRFCloud/bdd-feature-runner-aws",
  "main": "index.js",
  "scripts": {
    "test": "node dist/__tests__/run-features.js",
    "prettier": "prettier --write \"./**/*.{ts,js,json}\"",
    "prettier:lint": "prettier --list-different \"./**/*.{ts,js,json}\"",
    "lint": "npm run tslint && npm run prettier:lint",
    "tslint": "eslint --ext .js,.ts \"./**/*.ts\"",
    "postinstall": "npx tsc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/coderbyheart/bdd-feature-runner-aws-example.git"
  },
  "keywords": [
    "bdd",
    "aws",
    "cloud",
    "cloudnative",
    "gherkin",
    "testing"
  ],
  "author": "Markus Tacker <m@coderbyheart.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/coderbyheart/bdd-feature-runner-aws-example/issues"
  },
  "homepage": "https://github.com/coderbyheart/bdd-feature-runner-aws-example#readme",
  "devDependencies": {
    "@aws-cdk/aws-apigateway": "^1.12.0",
    "@aws-cdk/aws-codebuild": "^1.12.0",
    "@aws-cdk/aws-codepipeline": "^1.12.0",
    "@aws-cdk/aws-iam": "^1.12.0",
    "@aws-cdk/aws-lambda": "^1.12.0",
    "@aws-cdk/aws-logs": "^1.12.0",
    "@aws-cdk/aws-s3": "^1.12.0",
    "@aws-cdk/aws-sqs": "^1.12.0",
    "@aws-cdk/aws-ssm": "^1.12.0",
    "@aws-cdk/core": "^1.12.0",
    "@bifravst/code-style": "^4.0.2",
    "@coderbyheart/bdd-feature-runner-aws": "^8.1.3",
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-angular": "^8.2.0",
    "@types/node": "^12.7.12",
    "aws-cdk": "^1.12.0",
    "husky": "^3.0.8"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -e"
    }
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint --ext .js,.ts",
      "git add"
    ],
    "*.{md,json,yaml,yml,js}": [
      "prettier --write",
      "git add"
    ]
  },
  "release": {
    "branch": "saga",
    "remoteTags": true,
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/github"
    ]
  }
}
