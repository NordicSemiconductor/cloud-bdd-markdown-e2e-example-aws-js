{
  "include": ["**/*.ts"],
  "compilerOptions": {
    "outDir": "dist/",
    "target": "ES2022",
    "module": "ES2022",
    "lib": ["ES2022"],
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "nodenext",
    "strict": true,
    "declaration": true,
    "skipLibCheck": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "removeComments": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true
  }
}
